<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/account_one"
            style="@style/transactions_tv"
            android:text="Optima Bank" />

        <TextView
            android:id="@+id/amount"
            style="@style/transactions_tv"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="95dp"
            android:text="12000 сом" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/archive_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_account_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/ic_cardboard_box" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_account_btn"
            android:layout_toLeftOf="@+id/archive_btn"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/ic_pencil" />

    </RelativeLayout>

</RelativeLayout>