<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/expenditure_one"
            style="@style/transactions_tv"
            android:text="Заработная плата" />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/expenditure_archive_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_expenditure_category_btn"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_cardboard_box"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/expenditure_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_expenditure_category_btn"
            android:layout_toLeftOf="@+id/expenditure_archive_btn"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/ic_pencil"/>

    </RelativeLayout>

</RelativeLayout>