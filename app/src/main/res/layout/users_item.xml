<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/users_one"
            style="@style/transactions_tv"
            android:text="Санира Маджикова" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/user_archive_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_user_btn"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_cardboard_box"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/user_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_user_btn"
            android:layout_toStartOf="@+id/user_archive_btn"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/ic_pencil"/>

    </RelativeLayout>

</RelativeLayout>